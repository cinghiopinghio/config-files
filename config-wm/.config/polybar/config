[settings]

screenchange-reload = true

[colors]

background       = ${xrdb:polybar.background:#990000}
background-solid = ${self.background}
background-alt   = ${xrdb:polybar.color8:#504945}

foreground       = ${xrdb:polybar.foreground:#ebdbb2}
foreground-alt   = ${xrdb:polybar.color7:#a89984}


; red
color1           = ${xrdb:polybar.color1}
; green
color2           = ${xrdb:polybar.color2}
; yellow
color3           = ${xrdb:polybar.color3}
; blue
color4           = ${xrdb:polybar.color4}
; magenta
color5           = ${xrdb:polybar.color5}
; cyan
color6           = ${xrdb:polybar.color6}

easy             = ${colors.color2}
primary          = ${colors.color3}
secondary        = ${colors.color4}
alert            = ${colors.color1}
transparent      = #00000000
semitransparent  = #20000000

[vars]

padding  = 2
oversize = 2

[global/wm]

margin-top    = 0
margin-bottom = 0

[bar/base]
monitor             = ${env:MONITOR:eDP1}
width               = 100%
offset-x            = 0
offset-y            = 0

bottom              = false

;background          = ${colors.background}
background          = ${colors.transparent}
foreground          = ${colors.foreground}

;line-size      = ${vars.oversize}
;line-color = ${colors.transparent}
line-size           = 0
line-color          = #005500

border-size         = 0
border-top-size     = 5
border-bottom-size  = 0
border-color        = #00000000

padding-left        = 1
padding-right       = 1
module-margin-left  = 0
module-margin-right = ${vars.padding}

font-0              = Fira Mono:size=10;2
font-1              = Hack:size=10
font-2              = FontAwesome:size=12;2
font-3              = Wuncon Siji:pixelsize=12

[bar/bar1]

inherit          = bar/base
tray-position    = right
tray-padding     = 2
tray-transparent = true
tray-background  = ${colors.transparent}

modules-left        = menu i3
modules-center      = date
;modules-right       = backlight volume memory cpu battery powermenu
modules-right       = backlight volume battery 
enable-ipc = true

[bar/bar2]

inherit = bar/base

modules-left        = i3
modules-center      = date
;modules-right       = memory cpu battery temperature

[module/i3]

type                       = internal/i3
; display only workspaces on that screen
pin-workspaces             = true
format                     = <label-state> <label-mode>

label-mode                 = %mode%
label-mode-background      = ${colors.alert}
label-mode-foreground      = ${colors.background}
label-mode-padding         = ${vars.padding}

label-focused              = %name%
label-focused-foreground   = ${colors.background-alt}
label-focused-background   = ${colors.easy}
label-focused-overline     = ${colors.easy}
label-focused-underline    = ${colors.easy}
label-focused-padding      = ${vars.padding}

label-unfocused            = %name%
label-unfocused-background = ${colors.background-alt}
label-unfocused-padding    = ${vars.padding}

label-urgent               = %name%
label-urgent-background    = ${colors.alert}
label-urgent-padding       = ${vars.padding}

label-visible              = %name%
label-visible-background   = ${colors.foreground-alt}
label-visible-foreground   = ${colors.background-alt}
label-visible-padding      = ${vars.padding}

[module/xwindow]

type = internal/xwindow

[module/backlight]

type                     = internal/xbacklight

; <label> <bar> <ramp>
format                   = <label> <bar>
; %percentage%
label                    = 

bar-width                = 7
bar-indicator            = │
bar-fill                 = ─
bar-empty                = ─

[module/date]
type                     = internal/date
interval                 = 5

format-background = ${colors.background}
format-padding = ${vars.padding}

date                     = %A, %d %b
date-alt                 = %x

time                     = %H:%M
time-alt                 = %X

label                    = %date% %time%

[module/volume]

type                            = internal/volume

format-volume                   = %{A3:pavucontrol:}%{A} <bar-volume>
label-volume                    = ""
label-volume-foreground         = ${colors.foreground}

format-muted-prefix             = ""
format-muted-foreground         = ${colors.foreground-alt}
label-muted                     = "M"

bar-volume-width                = 7
bar-volume-foreground-0         = ${colors.easy}
bar-volume-foreground-1         = ${colors.easy}
bar-volume-foreground-2         = ${colors.easy}
bar-volume-foreground-3         = ${colors.easy}
bar-volume-foreground-4         = ${colors.primary}
bar-volume-foreground-5         = ${colors.alert}
bar-volume-gradient             = false
bar-volume-indicator            = │
bar-volume-indicator-foreground = ${colors.foreground}
bar-volume-fill                 = ─
bar-volume-empty                = ─
bar-volume-empty-foreground     = ${colors.foreground-alt}

[module/memory]

type             = internal/memory
interval         = 2
format-prefix    = " "
format-underline = ${colors.color2}
label            = %percentage_used%

[module/cpu]
type             = internal/cpu
interval         = 2
format-prefix    = " "
format-underline = ${colors.color3} 
label            = %percentage%

[module/wlan]
type                          = internal/network
interface                     = wlp2s0
interval                      = 3.0

label-connected               = %essid%
format-connected-prefix       = " "
format-connected              = <label-connected> <ramp-signal>
format-connected-underline    = ${colors.color4} 

label-disconnected            = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}
format-disconnected-underline = ${self.format-connected-underline}

ramp-signal-0                 = ▁
ramp-signal-1                 = ▂
ramp-signal-2                 = ▃
ramp-signal-3                 = ▄
ramp-signal-4                 = ▅
ramp-signal-5                 = ▆
ramp-signal-6                 = ▇
ramp-signal-7                 = █
ramp-signal-foreground        = ${colors.foreground}

[module/eth]

type                          = internal/network
interface                     = enp10s0u1u4
interval                      = 3.0

format-connected-underline    = ${colors.easy}
format-connected-prefix       = 
format-connected-foreground   = ${colors.foreground}
label-connected               = %local_ip%

label-disconnected            = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}
format-disconnected-underline = ${self.format-connected-underline}

[module/eth2]

# for when my adapter get a different name
inherit   = module/eth
interface = enp62s0u1u1u1

[module/custbat]
type = custom/script

exec = acpi -b | sed 's/.*, \(.*\)%. .\(.\):\(..\):.. .*/\1% \2H\3 /'
label =  %output% 

[module/battery]
type                         = internal/battery
battery                      = BAT0
adapter                      = AC
full-at                      = 95
time-format                  = %kH%M

; charging
label-charging               = %percentage%%
format-charging-prefix       = " " 
format-charging              = <label-charging>

; discharging
label-discharging            = %time%
format-discharging           = <ramp-capacity> <label-discharging>

; full
label-full                   = FULL
format-full-prefix           = " "
format-full                  = <label-full>

ramp-capacity-0              = 
ramp-capacity-0-foreground =${colors.background}
ramp-capacity-0-background =${colors.alert}
ramp-capacity-1              = 
ramp-capacity-2              = 
ramp-capacity-3              = 
ramp-capacity-4              = 

animation-charging-0         = 
animation-charging-1         = 
animation-charging-2         = 
animation-charging-3         = 
animation-charging-4         = 
animation-charging-framerate = 750

[module/temperature]

type                  = internal/temperature
thermal-zone          = 0
warn-temperature      = 60

format                = <ramp> <label>
format-underline      = ${colors.color6} 
format-warn           = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label                 = %temperature%
label-warn            = %temperature%
label-warn-foreground = ${colors.alert}

ramp-0                = 
ramp-1                = 
ramp-2                = 
ramp-3                = 
ramp-4                = 
ramp-foreground       = ${colors.foreground}

[module/powermenu]

type                   = custom/menu

label-open             = 
label-open-foreground  = ${colors.alert}
# label-open-background  = ${colors.alert}
label-open-padding     = ${vars.padding}
label-close            = 
label-close-foreground  = ${colors.background-solid}
label-close-background  = ${colors.easy}
label-close-padding     = ${vars.padding}

menu-0-0               = 
menu-0-0-exec          = systemctl reboot
menu-0-0-foreground    = ${colors.background-solid}
menu-0-0-background    = ${colors.primary}
menu-0-0-padding       = ${vars.padding}
menu-0-1               = 
menu-0-1-exec          = systemctl poweroff
menu-0-1-foreground    = ${colors.background-solid}
menu-0-1-background    = ${colors.alert}
menu-0-1-padding       = ${vars.padding}

[module/menu]
type = custom/menu
label-open = ""
label-close = " "
label-close-foreground  = ${colors.alert}
menu-0-0 = " "
menu-0-0-exec = "bash ~/.config/rofi/scripts/rofimodi"
menu-0-1 = " "
menu-0-1-exec = "bash ~/.config/rofi/scripts/menu.sh"
menu-0-2 = " "
menu-0-2-exec = termite
menu-0-3 = ""
menu-0-3-exec = "bash ~/.config/polybar/startup"

[module/pacman]
type = custom/script
exec = pacaur -Qu | wc -l
label = i %output%
format-underline = #a45476
interval = 60
click-left = gksudo "pacaur -Sy"

[module/email]
type = custom/script
exec = echo `notmuch count tag:unread`/`notmuch count tag:inbox`
label =   %output%
format-underline = #a45476
interval = 30

