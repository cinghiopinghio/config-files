[settings]

screenchange-reload = true

[colors]

background       = ${xrdb:polybar.background:#990000}
background-solid = ${self.background}
background-alt   = ${xrdb:polybar.color8:#504945}

foreground       = ${xrdb:polybar.foreground:#ebdbb2}
foreground-alt   = ${xrdb:polybar.color7:#a89984}


; red
color1           = ${xrdb:polybar.color1}
; green
color2           = ${xrdb:polybar.color2}
; yellow
color3           = ${xrdb:polybar.color3}
; blue
color4           = ${xrdb:polybar.color4}
; magenta
color5           = ${xrdb:polybar.color5}
; cyan
color6           = ${xrdb:polybar.color6}

easy             = ${colors.color2}
primary          = ${colors.color3}
secondary        = ${colors.color4}
alert            = ${colors.color1}
transparent      = #202020
semitransparent  = #20000000

[vars]

padding  = 2
oversize = 2

[global/wm]

margin-top    = 0
margin-bottom = 0

[bar/base]
monitor             = ${env:MONITOR:eDP1}
width               = 100%
offset-x            = 0
offset-y            = 0

bottom              = false

;background          = ${colors.background}
background          = ${colors.transparent}
foreground          = ${colors.foreground}

;line-size      = ${vars.oversize}
;line-color = ${colors.transparent}
line-size           = 0
line-color          = #005500

border-size         = 0
border-top-size     = 0
border-bottom-size  = 0
border-color        = #00000000

padding-left        = 1
padding-right       = 1
module-margin-left  = 0
module-margin-right = ${vars.padding}

font-0              = Fira Mono:size=10;2
font-1              = Symbola:size  =11;2
font-2              = Fira Sans:size=11;2
; font-3 = Twitter Color Emoji:size=11
font-3 = Material Icons:size=11
; font-2 = Cantarell:size=11;2

[bar/bar1]

inherit          = bar/base
tray-position    = right
tray-padding     = 2
tray-transparent = false
tray-background  = ${colors.transparent}

modules-left        = menu i3
modules-center      = date
;modules-right       = backlight alsa memory cpu battery powermenu
modules-right       = backlight pulseaudio battery lkscreen
enable-ipc = true

[bar/bar2]

inherit = bar/base

modules-left        = i3
modules-center      = date
;modules-right       = memory cpu battery temperature

[module/i3]

type                       = internal/i3
; display only workspaces on that screen
pin-workspaces             = true
format                     = <label-state> <label-mode>

label-mode                 = %mode%
label-mode-background      = ${colors.alert}
label-mode-foreground      = ${colors.background}
label-mode-padding         = ${vars.padding}

label-focused              = %name%
label-focused-foreground   = ${colors.background-alt}
label-focused-background   = ${colors.easy}
label-focused-overline     = ${colors.easy}
label-focused-underline    = ${colors.easy}
label-focused-padding      = ${vars.padding}

label-unfocused            = %name%
label-unfocused-background = ${colors.background-alt}
label-unfocused-padding    = ${vars.padding}

label-urgent               = %name%
label-urgent-background    = ${colors.alert}
label-urgent-padding       = ${vars.padding}

label-visible              = %name%
label-visible-background   = ${colors.foreground-alt}
label-visible-foreground   = ${colors.background-alt}
label-visible-padding      = ${vars.padding}

[module/xwindow]

type = internal/xwindow

[module/backlight]

type                     = internal/xbacklight

; <label> <bar> <ramp>
format                   = <label> <bar>
; %percentage%
label                    = LIGHT

bar-width                = 7
bar-indicator            = ‚îÇ
bar-fill                 = ‚îÄ
bar-empty                = ‚îÄ

[module/date]
type                     = internal/date
interval                 = 5

format-background = ${colors.background}
format-padding = ${vars.padding}

date                     = %A, %d %b
; date-alt                 = %x

time                     = %H:%M
; time-alt                 = %X

label                    = %{A1:termite --class=float --exec ikhal --geometry 700x1000:}%date% %time%%{A}
label-font = 3

[module/alsa]

type                            = internal/volume

format-volume                   = %{A3:pavucontrol:}VOL%{A} <bar-volume>
label-volume                    = VOL
label-volume-foreground         = ${colors.foreground}

; format-muted-prefix             = ""
format-muted-foreground         = ${colors.foreground-alt}
label-muted                     = "üîá"

bar-volume-width                = 7
bar-volume-foreground-0         = ${colors.easy}
bar-volume-foreground-1         = ${colors.easy}
bar-volume-foreground-2         = ${colors.easy}
bar-volume-foreground-3         = ${colors.easy}
bar-volume-foreground-4         = ${colors.primary}
bar-volume-foreground-5         = ${colors.alert}
bar-volume-gradient             = false
bar-volume-indicator            = ‚îÇ
bar-volume-indicator-foreground = ${colors.foreground}
bar-volume-fill                 = ‚îÄ
bar-volume-empty                = ‚îÄ
bar-volume-empty-foreground     = ${colors.foreground-alt}

[module/pulseaudio]

type                            = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
interval = 5

format-volume                   = %{A3:pavucontrol:}VOL <bar-volume>%{A}
label-volume                    = VOL
label-volume-foreground         = ${colors.foreground}

; format-muted-prefix             = ""
format-muted-foreground         = ${colors.foreground-alt}
label-muted                     = "üîá"
label-muted-font = 3

bar-volume-width                = 7
bar-volume-foreground-0         = ${colors.easy}
bar-volume-foreground-1         = ${colors.easy}
bar-volume-foreground-2         = ${colors.easy}
bar-volume-foreground-3         = ${colors.easy}
bar-volume-foreground-4         = ${colors.primary}
bar-volume-foreground-5         = ${colors.alert}
bar-volume-gradient             = false
bar-volume-indicator            = ‚îÇ
bar-volume-indicator-foreground = ${colors.foreground}
bar-volume-fill                 = ‚îÄ
bar-volume-empty                = ‚îÄ
bar-volume-empty-foreground     = ${colors.foreground-alt}

[module/battery]
type                         = internal/battery
battery                      = BAT0
adapter                      = AC
full-at                      = 95
time-format                  = %kH%M

; charging
label-charging               = %percentage%%
format-charging-prefix       = "BAT "
format-charging              = <ramp-capacity> <label-charging>

; discharging
label-discharging            = %time%
format-discharging           = <ramp-capacity> <label-discharging>

; full
label-full                   = BAT FULL
format-full                  = <label-full>

ramp-capacity-0                 = ‚ñÅ
ramp-capacity-1                 = ‚ñÇ
ramp-capacity-2                 = ‚ñÉ
ramp-capacity-3                 = ‚ñÑ
ramp-capacity-4                 = ‚ñÖ
ramp-capacity-5                 = ‚ñÜ
ramp-capacity-6                 = ‚ñá
ramp-capacity-7                 = ‚ñà
ramp-capacity-0-foreground   = ${colors.foreground}
ramp-capacity-0-background   = ${colors.alert}
ramp-capacity-0-padding      = 1

animation-charging-0                 = ‚ñÅ
animation-charging-1                 = ‚ñÇ
animation-charging-2                 = ‚ñÉ
animation-charging-3                 = ‚ñÑ
animation-charging-4                 = ‚ñÖ
animation-charging-5                 = ‚ñÜ
animation-charging-6                 = ‚ñá
animation-charging-7                 = ‚ñà
animation-charging-framerate = 750

[module/menu]
type = custom/menu
label-open = "MENU"
label-close = "CLOSE "
label-close-foreground  = ${colors.alert}
menu-0-0 = "MENU "
menu-0-0-exec = "bash ~/.config/rofi/scripts/rofimodi"
menu-0-1 = "WEB "
menu-0-1-exec = "bash ~/.config/rofi/scripts/menu.sh"
menu-0-2 = "TERM "
menu-0-2-exec = termite
menu-0-3 = "RELOAD"
menu-0-3-exec = "bash ~/.config/polybar/startup"

[module/screen]
type = custom/script
exec = ~/.config/polybar/screen.sh
click-left = ~/.config/polybar/screen.sh -t

[module/lkscreen]
type = custom/ipc
hook-0 = ~/.config/polybar/screen.sh -t
hook-1 = echo SCREEN
initial = 2
click-left = polybar-msg -p %pid% hook lkscreen 1


