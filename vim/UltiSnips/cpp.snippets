## Class
# class
snippet cl "cl"
class ${1:`!v Filename('$1', 'name')`} 
{
public:
	$1(${2});
	~$1();
private:
	${3:/* data */}
};
endsnippet

# member function implementation
snippet mfun "mfun"
${4:void} ${1:`!v Filename('$1', 'ClassName')`}::${2:memberFunction}(${3}) {
	${5:/* code */}
}
endsnippet

# namespace
snippet ns "ns"
namespace ${1:`!v Filename('', 'my')`} {
	${2}
} /* namespace $1 */
endsnippet

