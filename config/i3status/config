# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#389b6a"
        color_degraded = "#c8c649"
        color_bad  = "#c84f49"
        output_format = "i3bar" 
}

order += "disk /"
order += "disk /home"
#order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
#order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless wlp3s0"
order += "ethernet enp2s0"
order += "ethernet eth0"
order += "battery 0"
order += "volume master"
order += "tztime local"

wireless wlp3s0 {
        format_up = " %quality @ %essid"
        format_down = ""
}

ethernet enp2s0 {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip"
        format_down = ""
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip"
        format_down = ""
}

battery 0 {
        format = " %status %percentage %remaining"
        integer_battery_capacity = true
        low_threshold = 30
        threshold_type = time
}

run_watch DHCP {
        pidfile = "/var/run/dhcp*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%a %d %b %Y %H:%M"
}

cpu_usage {
        format = " %usage"
}

cpu_temperature 0 {
        format = "T %degrees°C"
        max_threshold = 50
}

disk "/" {
        format = "/ %avail"
}

disk "/home" {
        format = " %avail"
}

volume master {
        format = "♪ %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}



