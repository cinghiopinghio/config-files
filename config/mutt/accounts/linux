set realname = "Mauro"
set from = `pyastore -f linux`

# Other special folders.
set mbox      = "+linux/archive"
set postponed = "+linux/drafts"
set record    = "+linux/Sent"

# Use a signature
#set signature="~/.signature"

set sendmail = `pyastore -m linux`

macro index D \
    "<save-message>+linux/trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+linux/spam<enter>"  \
        "mark message as spam"
