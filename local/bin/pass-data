#!/usr/bin/env bash

if [ $# -lt 1 ];
then
  echo 'Usage: pass-data key'
  exit 1 
else
  KEY=$1
  if [ $# -eq 1 ];
  then
    echo 'Data for key: '${KEY}
    echo '---------------------'
    pass ${KEY} | sed '1d'
  else
    ENTRY=$2
    pass ${KEY} | grep ${ENTRY} | \
      awk -F: -v e=${ENTRY} '{gsub(/^[ \t]+|[ \t]+$/,"",$2);\
        if ($1==e) {print $2}}'
  fi
fi
