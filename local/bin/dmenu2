#!/usr/bin/env bash

# DMENU OPTIONS
nb='#222222'
nf='#999999'
sb='#109010'
sf='#222222'
font='Arial'
if [ -e ~/codes/dmenu2/dmenu ];
then
  cmd=~/codes/dmenu2/dmenu
else
  cmd=dmenu
fi
dmenu_cmd="${cmd} -i -fn \'$font\' -nb \\$nb -nf \\$nf -sb \\$sb -sf \\$sf"
echo ${dmenu_cmd}

i3-dmenu-desktop --dmenu="${dmenu_cmd}"
