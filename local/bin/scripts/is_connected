#!/usr/bin/env bash

# check internet connection

# let's suppose that if I can ping my gateway... everything is ok
gwIP=`ip route | grep default | cut -d ' ' -f 3`

# if gateway not defined: no internet
[[ ${gwIP} == '' ]] && exit 1

# ping gateway
ping -q -w 1 -c 1 ${gwIP} >>/dev/null && exit 0 || exit 1
