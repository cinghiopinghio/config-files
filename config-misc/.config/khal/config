[locale]
  local_timezone = Europe/Berlin
  default_timezone = Europe/Berlin
  timeformat= %H:%M
  dateformat= %d-%m
  longdateformat= %d-%m-%Y
  datetimeformat= %d-%m %H:%M
  longdatetimeformat= %d-%m-%Y %H:%M
  firstweekday = 0
  unicode_symbols = True

[default]
  default_calendar = cal
  highlight_event_days = True
  print_new = event
  timedelta = 15d
  show_all_days = False

[highlight_days]
  method = fg

[view]
  agenda_day_format = {bold}{date} -> {name}{reset}
  agenda_event_format = {calendar-color} {start-end-time-style:16}{title}{repeat-symbol}{reset}
  bold_for_light_color = False
  frame = width
  theme = dark
