#!/usr/bin/env bash
# based on: https://github.com/cdown/passmenu

shopt -s nullglob globstar

nb='#111111'
nf='#777777'
sb='#111111'
sf='#903030'
font='-*-*-*-*-*-*-14-*-*-*-*-*-*-*'
font="-*-dejavu sans mono-bold-R-normal--14-100-*-*-*-*-iso10646-1"
font='-bitstream-bitstream vera sans mono-medium-r-normal-*-15-*-100-100-m-*-iso8859-1'
dmenucmd=( dmenu -i -fn "$font" -nb "$nb" -nf "$nf" -sb "$sb" -sf "$sf" )

prefix=${PASSWORD_STORE_DIR:-~/.password-store}
files=( "$prefix"/**/*.gpg )
files=( "${files[@]#"$prefix"/}" )
files=( "${files[@]%.gpg}" )
fbase=( "${files[@]##*/}" )

word=$(printf '%s\n' "${fbase[@]}" | "${dmenucmd[@]}" "$@")

if [[ -n $word ]]; then
  for match in "${files[@]}"; do  
    if [[ $word == ${match#*/} ]]; then
      /usr/bin/pass show -c "$match" 2>/dev/null
    fi  
  done
fi

