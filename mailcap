
# Office  documents
application/msword ;       libreoffice %s ;             nametemplate=%s.doc ;
application/* ;            xdg-open %s; 

# PDFs
image/pdf ;                zathura %s ; nametemplate=%s.pdf ;

# Images
image/jpg ;                sxiv %s ;                 nametemplate=%s.jpg ;
image/jpeg ;               sxiv %s ;                 nametemplate=%s.jpg ;
image/png ;                sxiv %s ;                 nametemplate=%s.png ;

# Text
text/html ;                elinks -dump %s ;        nametemplate=%s.html ; copiousoutput ;
text/plain ;               less %s ;                copiousoutput

# Media Files
audio/* ;                  mplayer %s
video/* ;                  mplayer %s

# Compressed
application/zip ;          xdg-open %s 
application/x-zip ;        xdg-open %s 
application/gzip ;         xdg-open %s 
application/x-gzip ;       xdg-open %s 
application/gunzip ;       xdg-open %s 
application/x-gunzip ;     xdg-open %s 
application/tar ;          xdg-open %s 
application/x-tar ;        xdg-open %s 
application/tar-gz ;       xdg-open %s 
application/x-tar-gz ;     xdg-open %s 
