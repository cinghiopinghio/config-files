# Accounts will inherit settings from this section
defaults
auth             on
tls              on
#tls_trust_file   /usr/share/ca-certificates/mozilla/Thawte_Premium_Server_CA.crt
protocol smtp

# A first gmail address
account        gmail
host           smtp.gmail.com
port           587
passwordeval   pyastore -p gmail
tls_nocertcheck
#tls_trust_file /etc/ssl/certs/ca-certificates.crt

# A first isi address
account        isi
host           smtp.gmail.com
port           587
passwordeval   pyastore -p isi
tls_nocertcheck
#tls_trust_file /etc/ssl/certs/ca-certificates.crt

# A first linux
account        linux
host           smtp.mail.com
port           587
passwordeval   pyastore -p linux
tls_nocertcheck
#tls_trust_file /etc/ssl/certs/ca-certificates.crt

# A first linux
account        yahoo
host           smtp.mail.yahoo.com
passwordeval   pyastore -p yahoo
tls_nocertcheck
#tls_trust_file /etc/ssl/certs/ca-certificates.crt

account default : gmail

