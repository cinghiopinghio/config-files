# Scala lang
#if
snippet if "if"
if(${1:obj}) {
	${2:/* code */}
}
endsnippet

#if not
snippet ifn "ifn"
if(!${1:obj}) {
	${2:/* code */}
}
endsnippet

#if-else
snippet ifel "ifel"
if(${1:obj}) {
	${2:/* code */}
} else {
	${3:/* code */}
}
endsnippet

#if-else-if
snippet ifelif "ifelif"
if(${1:obj}) {
	${2:/* code */}
} else if(${3:obj}) {
	${4:/* code */}
}
endsnippet

#while loop
snippet while "while"
while (${1:obj}) {
	${2:/* code */}
}
endsnippet

#for loop(classic)
snippet for "for"
for (${1:item} <- ${2:obj}) {
	${3:/* code */}
}
endsnippet

#for loop(indexed)
snippet fori "fori"
for (${1:i} <- ${2:0} to ${3:obj}.length) {
	${4:/* code */}
}
endsnippet

#exceptions
snippet try "try"
try {
	${1:/* code */}
} catch {
	case e: FileNotFoundException => ${2:/* code */}
	case e: IOException => ${3:/* code */}
} finally {
	${4:/* code */}
}
endsnippet

#match
snippet match "match"
${1: obj} match {
	case ${2:e} => ${3:/* code */}
	case _ => ${4:/* code */}
}
endsnippet

#case
snippet case "case"
case ${1:value} => ${2:/* code */}
endsnippet

