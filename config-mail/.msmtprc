# Accounts will inherit settings from this section
defaults
auth             on
tls              on
protocol smtp

# A first gmail address
account        gmail
host           smtp.gmail.com
port           587
passwordeval   "pass email/gmail | head -1"
tls_nocertcheck

# A first isi address
account        isi
host           smtp.gmail.com
port           587
passwordeval   "pass email/gmail | head -1"
tls_nocertcheck

# A first linux
account        linux
host           smtp.mail.com
port           587
#port           25
#port           465
passwordeval   "pass email/linux | head -1"
tls_nocertcheck
auth          on

# A first ucl
account        ucl
host           smtp.uclouvain.be
port           587
passwordeval   "pass email/ucl | head -1"
tls_nocertcheck
auth          on

# A first linux
account        yahoo
host           smtp.mail.yahoo.com
passwordeval   "pass email/yahoo | head -1"
tls_nocertcheck

account default : gmail

