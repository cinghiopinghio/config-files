# Paths ----------------------------------------------
set folder           = ~/.mail                     # mailbox location
set alias_file       = ~/.config/mutt/alias        # where to store aliases
set header_cache     = ~/.cache/mutt/headers       # where to store headers
set message_cachedir = ~/.cache/mutt/bodies        # where to store bodies
set certificate_file = ~/.config/mutt/certificates # where to store certs
set mailcap_path     = ~/.config/mutt/mailcap      # entries for filetypes
set tmpdir           = /tmp                        # where to keep temp files
set signature        = ~/.config/mutt/sig          # my signature file

subscribe gap_comitatoquartierevanchiglia@googlegroups.com 
subscribe comitatovanchiglia_operativi@googlegroups.com
# Basic Options --------------------------------------
set wait_key = no        # shut up, mutt
set mbox_type = Maildir  # mailbox type
set timeout = 3          # idle time before scanning
set mail_check = 0       # minimum time between scans
unset move               # gmail does that
set delete               # don't ask, just do
unset confirmappend      # don't ask, just do!
set quit                 # don't ask, just do!!
unset mark_old           # read/new is good enough for me
set beep_new             # bell on new mails
set pipe_decode          # strip headers and eval mimes when piping
set thorough_search      # strip headers and eval mimes before searching


# Account Settings -----------------------------------

# Default inbox.
set spoolfile = "+mauro-gmail/INBOX"
source ~/.config/mutt/accounts/mauro-gmail

# change profile while changing maildirs
folder-hook mauro-gmail/*          source ~/.config/mutt/accounts/mauro-gmail
folder-hook cinghio-linux/*        source ~/.config/mutt/accounts/cinghio-linux
folder-hook cinghiopinghio-yahoo/* source ~/.config/mutt/accounts/cinghiopinghio-yahoo
folder-hook . "exec collapse-all"  # collapse all threads when entering a maildir


#Your beautiful theme
source ~/.config/mutt/themes/comidia

# Source bindings
source ~/.config/mutt/bindings

# Sidebar config
source ~/.config/mutt/sidebar

# Nice view settings
source ~/.config/mutt/views

# External Commands ----------------------------------------
# editor
set editor           = "vim"                       # Use terminal Vim to compose email.
# Address book: Abook
set query_command= "pyabook --mutt-query '%s'"
# Print option
#set print_command="muttprint -P A4 -F Helvetica -2 -p - | ps2pdf - /tmp/muttprint_xxx.pdf && zathura /tmp/muttprint_xxx.pdf" 
set print_command="mail2pdf"
