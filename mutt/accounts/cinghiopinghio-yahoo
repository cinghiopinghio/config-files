set realname = "Mauro"
set from = `pyastore -i cinghiopinghio-yahoo`

# Other special folders.
set mbox      = "+cinghiopinghio-yahoo/archive"
set postponed = "+cinghiopinghio-yahoo/drafts"
set record    = "+cinghiopinghio-yahoo/Sent"

# Use a signature
#set signature="~/.signature"

set sendmail    = `pyastore -m cinghiopinghio-yahoo`

macro index D \
    "<save-message>+cinghiopinghio-yahoo/Trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+cinghiopinghio-yahoo/Spam<enter>"  \
        "mark message as spam"
