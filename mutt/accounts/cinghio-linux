set realname = "Mauro"
set from = `pyastore -i cinghio-linux`

# Other special folders.
set mbox      = "+cinghio-linux/archive"
set postponed = "+cinghio-linux/drafts"
set record    = "+cinghio-linux/Sent"

# Use a signature
#set signature="~/.signature"

set sendmail = `pyastore -m cinghio-linux`

macro index D \
    "<save-message>+cinghio-linux/Trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+cinghio-linux/Spam<enter>"  \
        "mark message as spam"
