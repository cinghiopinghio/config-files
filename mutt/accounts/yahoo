set realname = "Mauro"
set from = `pyastore -f yahoo`

# Other special folders.
set mbox      = "+yahoo/archive"
set postponed = "+yahoo/drafts"
set record    = "+yahoo/Sent"

# Use a signature
#set signature="~/.signature"

set sendmail    = `pyastore -m yahoo`

macro index D \
    "<save-message>+yahoo/Trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+yahoo/Spam<enter>"  \
        "mark message as spam"
