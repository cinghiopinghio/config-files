#!/usr/bin/env bash

notmuch tag +troskos -unread -inbox -- subject:"IA Arag√≥n" and tag:unread
notmuch tag +com_vank -- subject:"comitatovanchiglia_operativi" and tag:unread
notmuch tag +gap_vank -- subject:"gap_comitatoquartierevanchiglia" and tag:unread
notmuch tag +com_vank -- subject:"comitatovanchiglia_news" and tag:unread
notmuch tag +alot -- to:"alot@noreply.github.com"

notmuch tag +deleted -- folder:Trash and not tag:deleted
notmuch tag +deleted -- folder:trash and not tag:deleted
notmuch tag +draft -- folder:Drafts and not tag:draft
notmuch tag +draft -- folder:drafts and not tag:draft
notmuch tag +sent -- folder:Sent and not tag:sent
notmuch tag +sent -- folder:sent and not tag:sent


s=$(notmuch search --format=json tag:new AND tag:inbox | notify-mail); 
if [ "$s" != "" ];
then
  notify-send MAIL "$s"
fi

